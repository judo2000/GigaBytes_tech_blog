<div class="container mb-4">
    {{#each posts as |post|}}
        <div class="card mt-4">
            <div class="card-header bg-dark">
                {{ post.title }}
                <div class="text-end"><strong>Submitted by {{ cap_first_letter User.username }} on {{ format_date post.createdAt}}</strong></div>
            </div>
            <div class="card-body text-dark">
                <p class="card-text">{{ post.body }}</p>
                <a href="/posts/{{ post.id}}" class="btn btn-dark">Read more...</a>
            </div>
        </div>
    {{/each}}
</div>
